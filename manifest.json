{
  "name": "Draft",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Easy collaboration and version control for writers with Draft. Everywhere.",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icon.png", 
    "default_popup": "popup.html"
  },
  "background": { "scripts": ["background.js", "jquery.js"] },
  "permissions": [
    "cookies",
    "http://*/*",
    "https://*/*",
    "tabs"
  ], 
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ]
}
